<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Course Management</title>
    <style>
      body { font-family: Arial, sans-serif; padding: 20px; background-color: #f9f9f9; }
      .container { max-width: 600px; margin: auto; background: white; padding: 20px; border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); }
      h1 { text-align: center; }
      label, input, button { display: block; margin: 10px 0; }
      input { padding: 8px; width: calc(100% - 20px); }
      button { padding: 10px; background-color: #007BFF; color: white; border: none; border-radius: 4px; cursor: pointer; }
      button:hover { background-color: #0056b3; }
      ul { list-style-type: none; padding: 0; }
      li { padding: 8px; background: #f1f1f1; margin: 5px 0; border-radius: 4px; }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Course Management</h1>
      <label for="courseInput">Enter Course Name:</label>
      <input type="text" id="courseInput" placeholder="Course name">

      <button id="showBtn">Show Courses</button>
      <button id="addBtn">Add Course</button>
      <button id="removeBtn">Remove Course</button>

      <h2>Available Courses:</h2>
      <ul id="courseList"></ul>
    </div>

    <script>
    
      const courses = ["Mathematics", "Physics", "Chemistry", "Biology"];

      // Show courses
      function showCourses() {
        const courseList = document.getElementById("courseList");
        courseList.innerHTML = ""; // Clear existing list
        courses.forEach(course => {
          const li = document.createElement("li");
          li.textContent = course;
          courseList.appendChild(li);
        });
      }

      // Add a new course
      function addCourse() {
        const courseInput = document.getElementById("courseInput").value.trim();
        if (courseInput) {
          courses.push(courseInput);
          alert(`Course '${courseInput}' added successfully!`);
          showCourses();
        } else {
          alert("Please enter a valid course name.");
        }
      }

      // Remove a course
      function removeCourse() {
        const courseInput = document.getElementById("courseInput").value.trim();
        const index = courses.indexOf(courseInput);
        if (index !== -1) {
          courses.splice(index, 1);
          alert(`Course '${courseInput}' removed successfully!`);
          showCourses();
        } else {
          alert(`Course '${courseInput}' not found.`);
        }
      }

      // Attach event listeners
      document.getElementById("showBtn").addEventListener("click", showCourses);
      document.getElementById("addBtn").addEventListener("click", addCourse);
      document.getElementById("removeBtn").addEventListener("click", removeCourse);

      // Initial display
      showCourses();
    </script>
  </body>
</html>
