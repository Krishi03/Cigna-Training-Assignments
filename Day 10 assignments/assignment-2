    <br/>
    <button id="applyStylesButton">Apply Styles</button>

    <script>
        document.getElementById("applyStylesButton").addEventListener("click", function() {
            const rows = document.querySelectorAll("#employeeTable tbody tr");
            rows.forEach((row, index) => {
                if (index % 2 === 1) { // Apply style to alternate rows (1-based index)
                    row.classList.add("alternate-row");
                } else {
                    row.classList.remove("alternate-row");
                }
            });
        });
    </script>
